{
  "name": "bizflow-backend",
  "version": "1.0.0",
  "description": "Sistema de Gestão Integrado BizFlow - Backend API com segurança avançada",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "prod": "NODE_ENV=production node server.js",
    "prod:cluster": "NODE_ENV=production node -r module-alias/register ./src/utils/cluster.js",
    
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration --passWithNoTests",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=e2e --passWithNoTests",
    "test:security": "NODE_ENV=test jest --testPathPattern=security --passWithNoTests",
    
    "migrate": "node ./src/config/migrate.js run",
    "migrate:rollback": "node ./src/config/migrate.js rollback",
    "migrate:reset": "node ./src/config/migrate.js reset",
    "migrate:status": "node ./src/config/migrate.js status",
    "migrate:create": "node ./src/config/migrate.js create",
    
    "seed": "node ./src/config/seed.js run",
    "seed:clear": "node ./src/config/seed.js clear",
    "seed:status": "node ./src/config/seed.js status",
    "seed:demo": "NODE_ENV=development node ./src/config/seed.js run --demo",
    
    "db:reset": "npm run migrate:reset && npm run migrate && npm run seed",
    "db:refresh": "npm run migrate:rollback && npm run migrate && npm run seed",
    "db:status": "npm run migrate:status && npm run seed:status",
    
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:ci": "npm audit --audit-level=high",
    "outdated": "npm outdated",
    
    "docker:build": "docker build -t bizflow-backend .",
    "docker:build:prod": "docker build --build-arg NODE_ENV=production -t bizflow-backend:prod .",
    "docker:build:multi": "docker buildx build --platform linux/amd64,linux/arm64 -t bizflow-backend:multi .",
    "docker:run": "docker run -p 3000:3000 --env-file .env --name bizflow-backend bizflow-backend",
    "docker:run:prod": "docker run -p 3000:3000 --env-file .env.production --name bizflow-backend-prod bizflow-backend:prod",
    "docker:compose": "docker-compose -f docker-compose.yml up",
    "docker:compose:build": "docker-compose -f docker-compose.yml up --build",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:logs": "docker logs -f bizflow-backend",
    "docker:logs:prod": "docker logs -f bizflow-backend-prod",
    "docker:exec": "docker exec -it bizflow-backend bash",
    "docker:stop": "docker stop bizflow-backend && docker rm bizflow-backend",
    "docker:stop:prod": "docker stop bizflow-backend-prod && docker rm bizflow-backend-prod",
    "docker:clean": "docker system prune -f",
    "docker:clean:all": "docker system prune -a -f",
    "docker:stats": "docker stats",
    "docker:images": "docker images",
    "docker:ps": "docker ps -a",
    
    "security:scan": "npm audit && npx snyk test",
    "security:monitor": "npx snyk monitor",
    "security:test": "npx snyk test --severity-threshold=high",
    
    "benchmark": "npx autocannon -c 100 -d 30 http://localhost:3000/health",
    "benchmark:api": "npx autocannon -c 50 -d 20 http://localhost:3000/api/products",
    "loadtest": "artillery run loadtest.yml",
    
    "docs:generate": "npx swagger-jsdoc -d swaggerDef.js -o swagger.json",
    "docs:serve": "npx swagger-ui-express swagger.json",
    "docs:validate": "npx swagger-cli validate swagger.json",
    
    "typecheck": "tsc --noEmit",
    "build": "npm run lint && npm run test && npm run security:test",
    "precommit": "npm run lint:staged && npm run test",
    "prepare": "husky install",
    "postinstall": "npm run security:scan",
    
    "monitor": "npx clinic doctor -- node server.js",
    "profile": "npx clinic flame -- node server.js",
    "heapdump": "node --inspect --inspect-brk server.js",
    
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "keywords": [
    "erp",
