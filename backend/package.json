  "description": "Sistema de GestÃ£o Integrado BizFlow - Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node ./src/config/migrate.js run",
    "migrate:rollback": "node ./src/config/migrate.js rollback",
    "migrate:reset": "node ./src/config/migrate.js reset",
    "migrate:status": "node ./src/config/migrate.js status",
    "seed": "node ./src/config/seed.js run",
    "seed:clear": "node ./src/config/seed.js clear",
    "seed:status": "node ./src/config/seed.js status",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "docker:build": "docker build -t bizflow-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env bizflow-backend",
    "docker:compose": "docker-compose up",
    "docker:compose:build": "docker-compose up --build"
  },
